ARG BASE_IMAGE
# hadolint ignore=DL3006
FROM $BASE_IMAGE

ARG BUILD_DATE
ARG VCS_REF
LABEL org.label-schema.build-date=$BUILD_DATE \
      org.label-schema.vcs-ref=$VCS_REF \
      org.label-schema.vcs-url="https://github.com/fukamachi/dockerfiles" \
      org.label-schema.version="edge" \
      org.label-schema.schema-version="1.0"
ARG LIBCURL=libcurl4-gnutls-dev
ENV LANG C.UTF-8
ENV PATH /root/.roswell/bin:${PATH}

ADD https://github.com/roswell/roswell/archive/master.tar.gz roswell.tar.gz

# hadolint ignore=DL3008,DL3003
RUN set -x; \
  tar zxf roswell.tar.gz && mv roswell-* roswell && cd roswell && \
  apt-get update && apt-get -y install --no-install-recommends \
    "${LIBCURL}" \
    bzip2 \
    ca-certificates \
    build-essential \
    automake && \
  sh bootstrap && ./configure && make && make install \
    && cd .. && rm -rf roswell && \
  apt-get autoremove --purge -y build-essential automake && apt-get clean && rm -rf /var/lib/apt/lists/*

ENTRYPOINT ["ros"]
CMD ["run"]
